#!/bin/bash
echo -n 'working...'
{
  cd "$(dirname "$BASH_SOURCE")"/../db
} && {
  rm -f database.db
} && {
  sqlite3 database.db <<SQL
.read ../src/sql/schema.sql
SQL
} && {
  if [[ -f ../src/sql/data.sql ]]; then
    sqlite3 database.db <<SQL
.read ../src/sql/data.sql
SQL
  fi
} && {
  chmod -R a+w .
} && {
  echo 'done'
}
