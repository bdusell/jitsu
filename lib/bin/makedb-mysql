#!/bin/bash
DIR="$(dirname "$BASH_SOURCE")"
. "$DIR/../bash/functions"
echo -n 'working...'
{
  # TODO appdir
  cd "$DIR/../src/sql/mysql"
} && {
  echo
  confirm 'Do you really want to clobber the database?'
} && {
  mysql -uroot -p <<SQL
source schema.sql
SQL
} && {
  if [[ -f data.sql ]]; then
    mysql -uroot -p <<SQL
source data.sql
SQL
  fi
} && {
  echo 'done'
}
